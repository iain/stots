- provide :project, project.to_param

%h1.well
  = project.name
  %small= project.slug

%ul.tabs
  %li{tab == "overview" ? { :class => "active" } : {} }= link_to "Overview", project
  %li= link_to "Coverage"
  %li= link_to "Commits"
  %li= link_to "Errors"
  %li= link_to "Builds"
  %li= link_to "Stats"
  %li= link_to "Tracker"
  %li{tab == "rspec" ? { :class => "active" } : {} }= link_to "RSpec", project_rspec_path(project)
  %li= link_to "Cucumber"
