!!!
%html
  %head
    %title Stots
    %meta{:charset => "UTF-8"}
    = favicon_link_tag "favicon.png"
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header.topbar
      .topbar-inner
        .container
          = link_to "Stots", root_path, :class => "brand"
          = render "shared/navigation"
    #main.container
      = render "shared/messages"
      %div{data("pjax-container")}
        = yield
