%ul.nav.pull-right

  %li= link_to "Settings", "#"

  %li.vertical-divider

  %li.dropdown.project_nav#project_nav_index

    = link_to "Projects #{caret}".html_safe, "#", :class => "dropdown-toggle", :data => { :toggle => "dropdown" }

    %ul.dropdown-menu

      - projects.each do |project|

        %li.project_nav{:id => "project_nav_#{project.to_param}"}

          = link_to project.name, project

      %li.divider
      %li#project_nav_new.project_nav= link_to "New project", new_project_path
